#flash_hook  
  .modal.fade{ "id" => "message_modal","tabindex"=>"-1", "role" => "dialog", "aria-labelledby" => "mySmallModalLabel", "aria-hidden" => "true" }
    .modal-dialog
      .modal-content
        %h4
          #{msg}
          %button.close{"type"=>"button", "data-dismiss"=>"modal"}
            %span{"aria-hidden" => "true"}
              %span.glyphicon.glyphicon-remove-circle
            %span.sr-only
              Close