.panel.panel-default
  #headingTwo.panel-heading{role: "tab"}
    %h4.panel-title
      = link_to "#collapseTwo", 'data-toggle' => "collapse",'aria-expanded'=>"true", 'aria-controls'=>"collapseTwo" do
        %span.glyphicon.glyphicon-tasks
        #{parent.name} - Tasks
      = link_to new_polymorphic_path([parent, @task]), remote: true, class: 'pull-right' do
        %span.glyphicon.glyphicon-plus
        New Task
  #collapseTwo.panel-collapse.collapse{ role: "tabpanel", 'aria-labelledby'=>"headingTwo" }
    .panel-body
      = render partial: 'shared/task_tabs'
      = render partial: 'tasks/shared/task_table', locals: { parent: parent, tasks: @tasks }
.panel.panel-default
  #headingThree.panel-heading{role: "tab"}
    %h4.panel-title
      = link_to "#collapseThree", 'data-toggle' => "collapse",'aria-expanded'=>"true", 'aria-controls'=>"collapseThree" do
        %span.glyphicon.glyphicon-file
        #{parent.name} - Notes
      = link_to new_polymorphic_path([parent, @note]), remote: true, class: 'pull-right' do
        %span.glyphicon.glyphicon-plus
        New Note
  #collapseThree.panel-collapse.collapse{ role: "tabpanel", 'aria-labelledby'=>"headingThree" }
    .panel-body
      #notes.l12.s12
        = render partial: 'notes/note', collection: parent.notes, locals: { parent: parent }
