%nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button', "data-toggle" => 'collapse', "data-target" => ".navbar-ex1-collapse"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "#", class: 'navbar-brand' do
        %span.glyphicon.glyphicon-tags
        Ideas
    .collapse.navbar-collapse.navbar-ex1-collapse 
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li{:class => "#{'active' if current_page?(ideas_path)}" }
            = link_to ideas_path do
              %span.glyphicon.glyphicon-cog
              Ideas
        - else
          %li{:class => 'active'}
            = link_to "#" do
              %span.glyphicon.glyphicon-home
              Home
        - if user_signed_in?
          %li{:class => "#{'active' if current_page?(jots_path)}" }
            = link_to jots_path do
              %span.glyphicon.glyphicon-comment
              Jots
        - if user_signed_in?
          %li{:class => "#{'active' if current_page?(categories_path)}"}
            = link_to categories_path do
              %span.glyphicon.glyphicon-tags
              Categories
      - if user_signed_in? 
        %ul.nav.navbar-nav.navbar-right 
          %li.dropdown{:class => 'active'}
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              %span.glyphicon.glyphicon-user
              #{current_user.email}
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                = link_to 'Edit profile', edit_user_registration_path
              %li
                = link_to "Logout", destroy_user_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            =link_to new_user_session_path do
              %span.glyphicon.glyphicon-log-in
              Sign in
          %li
            =link_to new_user_registration_path do
              %span.glyphicon.glyphicon-tasks
              Register