= bootstrap_form_for(@idea, remote: true) do |f|
  = f.text_field :name
  = f.text_area :description
  = f.text_area :benefits
  = f.text_area :problem_solves
  = f.select :status, options_for_select([["Hold"], ["Active"], ["Complete"]], "#{@idea.status}"), { label: "Update Idea Status " }, { class: "selectpicker" }
  = f.select :category_ids, current_user.categories.collect {|x| [x.name, x.id]}, {}, :multiple => true
  = f.hidden_field :user_id, value: current_user.id
  = f.button class: "btn btn-success"
  = link_to "Cancel", :back, {:class=>"btn btn-default"}