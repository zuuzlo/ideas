%tr{:id => "idea_#{idea.id}", class: row_class(idea)}
  %td.jot-up-down
    - unless idea.first?
      = link_to move_up_idea_path(idea), remote: true do
        %span.glyphicon.glyphicon-circle-arrow-up
    - unless idea.last?
      = link_to move_down_idea_path(idea), remote: true do
        %span.glyphicon.glyphicon-circle-arrow-down
  %td 
    = link_to idea_path(idea) do
      %span.glyphicon.glyphicon-eye-open
      #{idea.name}
  %td
    - idea.categories.each do |cat|
      %span.label.label-primary
        = "#{cat.name}"
      &nbsp
  %td
    = idea.notes.count
  %td
    = idea.tasks.count
  %td
    .btn-group.btn-group-sm
      = link_to edit_idea_path(idea), class: "btn btn-primary", remote: true do
        %span.glyphicon.glyphicon-pencil
      = link_to idea_path(idea), method: :delete, class: "btn btn-primary", remote: true, data: { confirm: 'Are you sure?' } do
        %span.glyphicon.glyphicon-trash